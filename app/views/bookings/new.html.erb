<% departure_flight = @selected_flight.from_airport.code %>
<% arrival_flight = @selected_flight.to_airport.code %>
<% selected_date = @scheduled_flight.scheduled_on.strftime('%B d%, %Y')%>
<% scheduled_time = @scheduled_flight.scheduled_on.strftime('%H:%M')%>
<% arrival_time = (@scheduled_flight.scheduled_on + (@selected_flight.duration/60).to_i_hours).strftime('%H:%M')%>

<div class="summary">
    <h2>Trip Details</h2>
    <h3>
        <%= selected_date %> | <%= departure_airport %> - <%= arrival_airport %> | <%= scheduled_time %> - <%= arrival_time%>
    </h3>
</div>

<div class= "form" >
    <%#= render "form" %>
</div>
