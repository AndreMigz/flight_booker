<%= form_with model: @booking, local: true do |f| %>
    <% num = 1%>
    <%= f.fields_for :passengers do |passenger_details| %>
        <p><%= "Passenger #{num}"%></p>

        <div class="field">
            <%= passenger_details.text_field :name, placeholder: "Passenger Name", required: true, class: "input" %>
        </div>

        <div class="field">
            <%= passenger_details.email_field :email, placeholder: "Passenger Email (name@example.com)", required: true, class: "input" %>
        </div>
        <% num += 1 %>
    <% end %>
    <%= f.hidden_field :flight_id, value: params[:flight] %>

    <%= f.submit "Buy Ticket", class: "button is-fullwidth is-link" %>

<% end %>